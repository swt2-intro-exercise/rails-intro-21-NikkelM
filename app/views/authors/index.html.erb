<h1>Listing all Authors</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
	<th colspan="3"></th>
  </tr>
 
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= link_to author.homepage %></td>
      <td><%= link_to 'Show', author_path(author) %></td>
	  	<td><%= link_to 'Edit', edit_author_path(author) %></td>
			<td><%= link_to 'Delete', author_path(author), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<p>Add a new Author:</p>
<%= link_to 'New Author', new_author_path %> |
<%= link_to "Back", :back %> 